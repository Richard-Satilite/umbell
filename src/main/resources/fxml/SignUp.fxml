   <children>
      <Label text="abrir conta" textFill="#3bc6049e">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
         <children>
            <TextField promptText="Nome completo" styleClass="tf_box" stylesheets="@../css/signup.css" HBox.hgrow="ALWAYS" />
            <FontIcon iconLiteral="fas-user" iconSize="18" />
         </children>
         <VBox.margin>
            <Insets right="18.0" top="20.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
         <children>
            <TextField promptText="Email" styleClass="tf_box" stylesheets="@../css/signup.css" HBox.hgrow="ALWAYS" />
            <FontIcon iconLiteral="fas-envelope" iconSize="18" />
         </children>
         <VBox.margin>
            <Insets right="18.0" top="15.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
         <children>
            <TextField promptText="Senha" styleClass="tf_box" stylesheets="@../css/signup.css" HBox.hgrow="ALWAYS" />
            <FontIcon iconLiteral="fas-lock" iconSize="18" />
         </children>
         <VBox.margin>
            <Insets right="18.0" top="20.0" />
         </VBox.margin>
      </HBox>
      <Button mnemonicParsing="false" prefHeight="37.0" prefWidth="432.0" styleClass="green-btn" stylesheets="@../css/signup.css" text="abrir conta" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
   </children>
   <padding>
      <Insets left="20.0" />
   </padding>
</VBox>
