<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.umbell.controller.NewAccountCardController"
      fx:id="root"
      styleClass="new-account-card"
      stylesheets="@../css/account-card.css">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <HBox alignment="CENTER" spacing="10">
        <FontIcon iconLiteral="fas-plus-circle" iconSize="24" styleClass="plus-icon"/>
        <Label text="Criar Nova Conta" styleClass="new-account-label"/>
    </HBox>
    
</VBox>
